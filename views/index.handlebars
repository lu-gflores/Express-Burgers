<div class="container">
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4">Eat A Burger Or Create Your Own!</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md">
            <ol>
                {{#each burgers}}
                {{#unless devoured}}
                <li><p>{{id}}, {{burger}} <button class="btn btn-secondary">Devour</button></p></li>
                {{/each}}
            </ol>
        </div>
    </div>

    <form action="" class="create-form">
        <label for="createBurger"></label>
        <textarea class="form-control" rows="3"></textarea>
        <button type="submit" class="btn btn-primary"></button>
    </form>

</div>