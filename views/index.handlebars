<div class="container">
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4">Eat A Burger Or Create Your Own!</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md">
            <ol class="list-group">
                {{#each burgers}}
                {{#unless devoured}}
                <li class="list-group-item"><p>{{id}}, {{burger}} <button type="submit" class="btn btn-secondary">Devour</button></p></li>
                {{/unless}}
                {{/each}}
            </ol>
        </div>
        <div class="col-md">
            <ol class="list-group">
            {{#each burgers}}
            {{#if devoured}}
            <li class="list-group-item"><p>{{id}}, {{burger}}</p></li>
            {{/if}}
            {{/each}}
            </ol>
        </div>
    </div>

    <form action="" class="create-form">
        <label for="createBurger"></label>
        <textarea class="form-control" rows="3"></textarea>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

</div>